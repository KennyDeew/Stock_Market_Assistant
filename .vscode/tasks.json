{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/StockMarketAssistant.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/StockMarketAssistant.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/StockMarketAssistant.sln"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Remove All Docker Containers",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/remove_all_docker_containers.ps1"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start Docker Compose",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/start-docker-compose.ps1",
				"-Build"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true,
				"clear": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": false,
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "Start Docker Compose (Detached)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/start-docker-compose.ps1",
				"-Build",
				"-Detached"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true
		},
		{
			"label": "Stop Docker Compose",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"down"
			],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}