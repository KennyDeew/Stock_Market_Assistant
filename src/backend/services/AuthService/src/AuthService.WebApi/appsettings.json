{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "Database": ""
  },

  "Database": {
    "MigrateOnStartup": true
  },

  "Jwt": {
    "Issuer": "AuthService",
    "Audience": "AuthServiceClients",
    "Key": "",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 30
  },

  "RolePermission": {
    "Permissions": {
      "Accounts": [ "auth.service" ],
      "System":   [ "system.admin" ]
    },
    "Roles": {
      "ADMIN": [ "auth.service", "system.admin" ],
      "USER":  [ "auth.service" ]
    }
  },

  "DefaultAdministrator": {
    "Apply": true,
    "UserName": "admin",
    "Email": "admin@mail.local",
    "Password": ""
  },

  "AllowedHosts": "*"
}